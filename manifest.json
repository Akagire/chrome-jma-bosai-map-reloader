{
  "manifest_version": 3,
  "name": "JMA防災マップリローダー",
  "description": "気象庁の防災マップを定期的にリロードします",
  "version": "0.1",
  "icons": {
    "128": "public/128.png"
  },
  "permissions": [
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.jma.go.jp/bosai/nowc/*"
      ],
      "js": [
        "content_scripts/nowc.js"
      ],
      "run_at": "document_end"
    }
  ]
}
